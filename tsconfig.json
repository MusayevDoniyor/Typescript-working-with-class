{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020", /* Modern JavaScript features support. */
    "module": "ESNext", /* Enable import/export syntax. */
    "moduleResolution": "node", /* Node-style resolution. */
    "rootDir": "./",
    "outDir": "dist",
    // Interop and Compatibility
    "esModuleInterop": true, /* Support default imports from CJS */
    "forceConsistentCasingInFileNames": true, /* Avoid casing bugs in imports */
    /* Type Checking */
    "strict": true, /* All strict checks */
    "skipLibCheck": true /* Faster build, skip .d.ts check */
  }
}